#include "pch.h"
#include <iostream>
using namespace std;

int main()
{
	int loan, years;
	double rate;
	cout << "Input loan amount \n";
	cin >> loan;
	cout << "Input annual interest rate \n";
	cin >> rate;
	cout << "Input number of years\n";
	cin >> years;

	cout << "Monthly payment for this loan is (RM) : " << ((rate / 100)*(loan*years)) / (years * 12) << endl << endl;
}
